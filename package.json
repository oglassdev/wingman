{
  "name": "wingman",
  "version": "1.0.0",
  "private": true,
  "description": "Electrobun desktop app with server/client architecture",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:hmr": "turbo run dev:hmr",
